@model IEnumerable<ServisVozila.Models.servis>

@{
    ViewBag.Title = "Popis servisa";
}
<h2>PlaceHolder</h2>
<h2>Popis Servisa</h2>

<p>
    <button type="button" class="btn btn-success btn-md" onclick="location.href='@Url.Action("Create","servis")'">Stvaranje</button>
    @*ovo je btn za povratak na index*@
    <button type="button" class="btn btn-primary btn-md" onclick="location.href='@Url.Action("Index","Home")'">Povratak</button>
    @* to sam zakomentiral jer ak se vam ne svidjaju buttoni onda vratimo na link verziju
    @Html.ActionLink("Admin verzija", "Admin")

    @Html.ActionLink("Kalendar Servisa", "KalendarDogadaja", "Kalendar")
    *@
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.datum)*@
            Datum
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.opisPosla)*@
            Opis posla
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.obavljen)*@
            Obavljen
        </th>
        <th>
            Napomena
        </th>
    </tr>

@foreach (var item in Model)
{
    if (item.idKorisnik == ViewBag.tKorisnik)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.opisPosla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.obavljen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.napomena)
            </td>
            <td>
                @Html.ActionLink("Uređivanje", "Edit", new { id = item.idServis }) |
                @Html.ActionLink("Brisanje", "Delete", new { id = item.idServis })
            </td>
        </tr>
    }
}

</table>

<p>
    <span class="glyphicon glyphicon-print"></span> @Html.ActionLink("Ispiši listu", "Ispisi", new
                                               {
                                                   opisPosla = Request.QueryString["opisPosla"],
                                                   napomena = Request.QueryString["napomena"],
                                                   cijena = Request.QueryString["cijena"],
                                                   datum = Request.QueryString["datum"],
                                               }, new { target = "blank" })
</p>