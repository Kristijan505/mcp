<div class="jumbotron">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.marka).Titled("Marka").Filterable(true);
    Columns.Add(c => c.model).Titled("Model").Filterable(true);
    Columns.Add(c => c.zapremina).Titled("Zapremina [ccm]").Filterable(true);
    Columns.Add(c => c.godinaProiz).Titled("Godina proizvodnje").Filterable(true);
    Columns.Add(c => c.boja).Titled("Boja vozila").Filterable(true);
    Columns.Add(c => c.regBroj).Titled("Registracijski broj").Filterable(true);
    Columns.Add().Encoded(false).Sanitized(false).SetWidth(10).RenderValueAs(o => Html.ActionLink("Uređivanje", "Edit", new { id = o.idVozilo }));
}).WithPaging(10).Sortable().Filterable().WithMultipleFilters()
</div>