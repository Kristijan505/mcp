@model ServisVozila.Models.ApplicationUser

@{
    ViewBag.Title = "Detalji o korisniku";
}
<h2>PlaceHolder</h2>
<h2>Detalji o korisniku</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Id:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Lozinka (Hash):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
    </dl>
</div>
<p>
